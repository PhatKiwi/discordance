<div class="w-60 h-full min-h-screen bg-gray-800 flex flex-col p4">
  <div class="flex justify-end w-full">
    <%= link_to "Create Server", new_server_path, class: "text-lg text-gray-100 px-3 py-2 rounded-lg bg-blue-500", data: { turbo_frame: :dashboard }%>
  </div>

  <div class="flex flex-col gap-2 mt-4">
    <% current_user.owned_servers.order(created_at: :desc).each do |server| %>
      <%= link_to server.name, server_path(server), class: "text-lg text-gray-100 px-3 py-2 rounded-lg bg-gray-500"%>
    <% end %>
  </div>
</div>